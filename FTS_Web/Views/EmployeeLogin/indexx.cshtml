@{
    ViewBag.Title = "Login";
    Layout = null;
}

<div class="container-scroller">
    <div class="container-fluid page-body-wrapper full-page-wrapper">
        <div class="content-wrapper d-flex align-items-center auth px-0">
            <div class="row w-100 mx-0">
                <div class="col-lg-4 mx-auto">
                    <div class="auth-form-light text-left py-5 px-4 px-sm-5">
                        <div class="brand-logo">
                            <img src="~/images/logo.png" alt="logo">
                        </div>
                        <h4 class="font-weight-light">Sign in to continue.</h4>
                        <form class="pt-3">
                            <div class="form-group">
                                @Html.TextBox("Username","", new { @class = "form-control form-control-lg", type = "email" , placeholder = "Username" })
                            </div>
                            <div class="form-group">
                                @Html.TextBox("Password", "", new { @class = "form-control form-control-lg", type = "password", placeholder = "Password" })
                            </div>
                            <div class="mt-3">
                                @Html.ActionLink("SIGN IN", "Index", "Dashboard", new { area = "" }, new { @class = "btn btn-block btn-primary btn-lg font-weight-medium auth-form-btn" })
                            </div>
                            <div class="my-2 d-flex justify-content-between align-items-center">
                                <div class="form-check">                                    
                                    @Html.CheckBox("chkCheck", false, new { Style = "form-control", type = "Checkbox" })
                                    @Html.Label("Keep me signed in")
                                    <i class="input-helper"></i>                                    
                                </div>
                                @Html.ActionLink("Forgot password?", "Index", "Home", new { area = "" }, new { @class = "auth-link text-black", @style = "font-weight: bold;" })
                            </div>

                            <div class="text-center mt-4 font-weight-light">                                
                                @Html.Label("Don't have an account? ")
                                @Html.ActionLink("Sign Up", "Index", "Home", new { area = "" }, new { @class = "auth-link text-black", @style = "font-weight: bold;" })                                
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>