@model  IEnumerable<FTS.Model.Entities.ConciliationApplicationModel>
@{
     ViewBag.Title = "ACOL List";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken();
    <br />
    <section>
        <h3 style="font-weight:bold;"> @ViewBag.Title</h3>
    </section>       

    <div class="content-wrapper">
        <div class="row">           
            <div class="col-12 grid-margin stretch-card">
                <div class="card">
                    <div class="card-body">
                        <div class="row">
                            <div class="col-12">
                                <div class="table-responsive">
                                    <div id="Filter" class="dataTables_filter float-right mx-3">
                                        @*<a id="Add" href="/ReinstatementAppliaction/AddReinstatementAppliaction/?id=" class="btn btn-outline-primary"><i class="fas fa-plus-circle"></i>Add New</a>*@
                                              <br>
                                        <br>
                                    </div>
                                    <table id="ConciliationACLList" class="display expandable-table" style="width:100%">
                                        <thead>
                                            <tr>
                                                  <th style="width:5%;" id="roleName">Sr.No.</th>
                                                 <th style="width:5%;" id="roleName">Referenece No.</th>
                                                 <th style="width:5%;" id="roleName">Application Id</th>
                                                  <th style="width:20%;" id="roleName">Applicant Name</th>
                                                   <th style="width:10;" id="roleName">Application Mode</th>
                                                   <th style="width:10%;" id="roleName">Application Date</th>
                                                   <th style="width:10%;" id="roleName">Status</th>
                                                <th style="width:10%;" id="roleName">Resolution Status</th>
                                                   <th style="width:10%;" id="roleName">Hearing Date</th>
                                                  <th  style="width:60%;" id="Edit">Action</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                          @foreach (var item in Model)
                                          {
                                            <tr> 
                                                @*<td valign="top" class="text-left">@item.RoleID </td>*@
                                                 <td valign="top" class="text-left">@item.ID </td>
                                                    <td valign="top" class="text-left">@item.AppID </td>
                                                        <td valign="top" class="text-left">@item.ApplicationID </td>
                                                <td valign="top" class="text-left">@item.ApplicantName </td>
                                                   <th style="width:30;" id="roleName">@item.ApplicationMode</th>
                                                  <td valign="top" class="text-left">@item.AppDate </td>
                                                    <th style="width:30;" id="roleName">@item.StatusName</th>
                                                    <th style="width:30;" id="roleName">@item.ResolutionReason</th>
                                                   <th style="width:30;" id="roleName">@item.HearingDateString</th>
                                                <td>
                                                    <div class="row">
                                                        
                                                     @*<a id="Edit" href="/ConciliationAppliaction/AddConciliationHearingALC/?id=@item.EncryptedId" ><i class="fas fa-pen"></i></a>*@
                                                     
                                                         @if(@item.ActionCode == 5 || @item.ActionCode == 6)
                                                        {
                                                           @* <a id="Edit"  title="Hearing" href="/ConciliationApplication/AddConciliationHearingACL/?id=@item.EncryptedId&ISNew=0" onclick="return false;"><i class="fas fa-calendar-alt"></i></a>
                                                            <a id="Edit"  title="Resolution" href="/ConciliationApplication/AddConciliationHearingACL/?id=@item.EncryptedId&ISNew=1" onclick="return false;" ><i class="fas fa-check-circle"></i></a>
                                                             <a id="Edit"  title="Forward" href="/ConciliationApplication/AddConciliationHearingACL/?id=@item.EncryptedId&ISNew=2" onclick="return false;"><i class="fas fa-share"></i></a>*@
                                                             <div class="col-auto">
                                                                   <a id="Edit" class="btn btn-outline-primary ml-3 mt-1"  title="View" href="/ConciliationApplication/AddConciliationHearingACL/?id=@item.EncryptedId&IsView=2"><i class="fas fa-eye"></i>View</a>
                                                             </div>
                                                         }
                                                         
                                                        else
                                                        {
                                                            @if(@item.ActionCode != 17)
                                                            {
                                                                 <div class="col-auto">
                                                                     <a id="Edit" class="btn btn-outline-primary ml-3 mt-1"  title="Hearing" href="/ConciliationApplication/AddConciliationHearingACL/?id=@item.EncryptedId&ISNew=0" ><i class="fas fa-calendar-alt"></i>Hearing</a>
                                                                </div>
                                                            }
                                                           @if(@item.ActionCode == 17)
                                                            {
                                                                 <div class="col-auto">
                                                                     <a id="Edit" class="btn btn-outline-primary ml-3 mt-1"  title="Resolution" href="/ConciliationApplication/AddConciliationHearingACL/?id=@item.EncryptedId&ISNew=1" ><i class="fas fa-check-circle"></i>Resolution</a>
                                                                 </div>
                                                            }
                                                            else
                                                            {
                                                                 <div class="col-auto">
                                                                      <a id="Edit"  class="btn btn-outline-primary ml-3 mt-1"  title="Resolution" href="/ConciliationApplication/AddConciliationHearingACL/?id=@item.EncryptedId&ISNew=1" ><i class="fas fa-check-circle"></i>Resolution</a>
                                                                 </div>
                                                                 <div class="col-auto">
                                                                     <a id="Edit"  class="btn btn-outline-primary ml-3 mt-1" title="Forward" href="/ConciliationApplication/AddConciliationHearingACL/?id=@item.EncryptedId&ISNew=2" ><i class="fas fa-share"></i>Forward DCL</a>
                                                                  </div>
                                                            }

                                                        }
                                                   
                                                    </div>
                                                    @* @if(@item.UserMode == 1 && @item.IsSubmit == true)
                                                        {
                                                         <a id="Edit" href="/ReinstatementAppliaction/AddReinstatementAppliaction/?id=@item.EncryptedId" ><i class="fas fa-calendar-alt"></i></a>
                                                        }*@
                                                        @* <a id="Delete" onclick="return DeletePositionRecord(@item.ApplicationID);"><i class="fas fa-trash-alt"></i></a>*@
                                                </td>
                                            </tr>
                                        }
                                        </tbody>
                                    </table>
                                
                                </div>
                            </div>                            
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>


     <script>

      $( document ).ready(function() {
        $('#ConciliationACLList').dataTable( {} );
    });

        </script>
  
}
