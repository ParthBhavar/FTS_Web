@model IEnumerable<FTS.Model.Entities.inspectionModel>
@{
    ViewBag.Title = "Inspection List";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

@using (Html.BeginForm())
{
   @Html.AntiForgeryToken();
    <br />
    <section>
        <h3 style="font-weight:bold;"> @ViewBag.Title</h3>
    </section>       

    <div class="content-wrapper">
        <div class="row">           
            <div class="col-12 grid-margin stretch-card">
                <div class="card">
                    <div class="card-body">
                        <div class="row">
                            <div class="col-12">
                                <div class="table-responsive">
                                    <div id="Filter" class="dataTables_filter float-right mx-3">
                                        <a id="Add" href="/inspection/_InspectionView/?EncryptedId=" class="btn btn-outline-primary"><i class="fas fa-plus-circle mr-1"></i>Add New</a>
                                            </div>
                                    <table id="RoleList" class="display expandable-table" style="width:100%">
                                        <thead>
                                            <tr>
                                                 <th style="width:2%;" >ID</th>
                                                <th style="width:20%;">Report No</th>
                                                <th style="width:20%;">Complain Name</th>
                                                <th style="width:20%;">Complain Subject</th>
                                                <th style="width:20%;">Inspection Date</th>
                                                  <th  style="width:2%;">Action</th>
                                                 
                                            </tr>
                                        </thead>
                                        <tbody>
                                             @foreach (var item in Model)
                                            {
                                                <tr>
                                                    <td valign="top" class="text-left">@item.ID </td>
                                                    <td valign="top" class="text-left">@item.ReportNo</td>
                                                    <td valign="top" class="text-left">@item.ComplainName </td>
                                                    <td valign="top" class="text-left">@item.ComplainSubject </td>
                                                    <td valign="top" class="text-left">@item.InspectionDate </td>
                                                <td>
                                                        @if (@item.IsSubmit == true)
                                                        {
                                                            <a id="Edit" class="btn btn-outline-primary ml-3 mt-1" href="/inspection/_InspectionView/?EncryptedId=@item.EncryptedId&stpid=1"><i class="fas fa-eye"></i> View </a>
                                                        }
                                                        else
                                                        {
                                                            <a id="Edit" href="/inspection/_InspectionView/?EncryptedId=@item.EncryptedId&stpid=1"><i class="fas fa-pen"></i></a>
                                                            @* <a id="Edit" href="/ReinstatementAppliaction/test/"><i class="fas fa-pen"></i></a>*@
                                                        }
                                                    
                                                    </td>
                                            </tr>
                                        }
                                        </tbody>
                                    </table>
                                
                                </div>
                            </div>                            
                        </div>  
                    </div>
                </div>
            </div>
        </div>
    </div>
 
    <script>

      $( document ).ready(function() 
      {
       // RoleList();
        //$('#RoleList').DataTable();
        $('#RoleList').dataTable( {} );
        });
   
        </script>

}
