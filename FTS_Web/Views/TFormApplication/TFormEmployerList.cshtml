@model  IEnumerable<FTS.Model.Entities.TFormAppealApplicationModel>
 @{
     ViewBag.Title = "Gratuity Appeal Application";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken();
    <br />
    <section>
        <h3 style="font-weight:bold;"> @ViewBag.Title</h3>
    </section>   
    @if (TempData["message"] != null)
    {
    <script>alert('@TempData["message"]');</script>
    }

    <div class="content-wrapper">
        <div class="row">           
            <div class="col-12 grid-margin stretch-card">
                <div class="card">
                    <div class="card-body">
                        <div class="row">
                            <div class="col-12">
                                <div class="table-responsive">
                                    <div id="Filter" class="dataTables_filter float-right mx-3 mb-3">
                                        <a id="Add" href="/TFormApplication/AddTFormForEmployer/?id=" class="btn btn-outline-primary"><i class="fas fa-plus-circle mr-1"></i>New Appeal</a>
                                    </div>
                                    <table id="NFormList" class="display expandable-table" style="width:100%">
                                        <thead>
                                            <tr>
                                                  <th style="width:2%;" id="roleName">Sr.No</th>
                                                  <th style="width:5%;" id="roleName">Appeal ID</th>
                                                   <th style="width:10%;" id="roleName">Referenece N No.</th>
                                                    @*<th style="width:20%;" id="roleName">Applicant Name</th>*@
                                      @*             <th style="width:5%;" id="roleName">Appl</th>
                                                  <th style="width:20%;" id="roleName">Name</th>*@
                                                  <th style="width:10%;" id="roleName">Application Date</th>
                                                    <th style="width:15%;" id="roleName">Status</th>
                                                  <th  style="width:50%;" id="Edit">Action</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                             @foreach (var item in Model)
                                        {
                                            <tr> 
                                                @*<td valign="top" class="text-left">@item.RoleID </td>*@
                                                <td valign="top" class="text-left">@item.ID </td>
                                                       <td valign="top" class="text-left">@item.AppealID </td>
                                                  <td valign="top" class="text-left">@item.RefNApplicationID </td>
                                                  @*<td valign="top" class="text-left">@item.ApplicantName </td>*@
                                         
                                                <td valign="top" class="text-left">@item.AppDate </td> 
                                                <td valign="top" class="text-left">@item.StatusName 
                                                    @if (@item.IsSubmit == true)
                                                    {
                                                        <a id="Edit"  title="Status History" href="/TFormApplication/StatusHistory/?id=@item.RefNApplicationID&ISNew=0&@item.EncryptedId&ISView=1" ><i class="fas fa-history ml-2"></i></a>
                                                    }
                                                </td>
                                                <td>

                                                    <a id="Edit" class="btn btn-outline-primary ml-3 mt-1" href="/TFormApplication/AddTFormForEmployer/?id=@item.EncryptedId" ><i class="fas fa-eye"></i>View</a>
                                                    
                                                    @* @if(@item.IsSubmit == true)
                                                        {
                                                            <a id="Edit" href="/NFormApplication/AddNFormApplication/?id=@item.EncryptedId" ><i class="fas fa-eye"></i></a>
                                                        }
                                                        else
                                                        {
                                                             <a id="Edit" href="/NFormApplication/AddNFormApplication/?id=@item.EncryptedId" ><i class="fas fa-pen"></i></a>
                                                        }*@
                                                        @* <a id="Delete" onclick="return DeletePositionRecord(@item.ApplicationID);"><i class="fas fa-trash-alt"></i></a>*@
                                                </td>
                                            </tr>
                                        }
                                        </tbody>
                                    </table>
                                
                                </div>
                            </div>                            
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>


     <script>

      $( document ).ready(function() {
        $('#TFormApplicationList').dataTable( {} );
    });

        </script>
  
}
