@model  IEnumerable<FTS.Model.Entities.ReinstatementAppliactionModel>
@{
     ViewBag.Title = "Reinstatement Application";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
@using (Html.BeginForm())
{
         @Html.AntiForgeryToken();
    <br />
    <section>
        <h3 style="font-weight:bold;"> @ViewBag.Title</h3>
    </section>       

    <div class="content-wrapper">
        <div class="row">           
            <div class="col-12 grid-margin stretch-card">
                <div class="card">
                    <div class="card-body">
                        <div class="row">
                            <div class="col-12">
                                <div class="table-responsive">
                                    <div id="Filter" class="dataTables_filter float-right mx-3">
                                        <a id="Add" href="/ReinstatementAppliaction/AddReinstatementAppliaction/?id=" class="btn btn-outline-primary"><i class="fas fa-plus-circle mr-1"></i>Add New</a>
                                              <br>
                                        <br>
                                    </div>
                                    <table id="ReinstementList" class="display expandable-table" style="width:100%">
                                        <thead>
                                            <tr>
                                                  <th style="width:2%;" id="roleName">ID</th>
                                                  <th style="width:5%;" id="roleName">AppID</th>
                                                   <th style="width:5%;" id="roleName">user Mode</th>
                                                  <th style="width:20%;" id="roleName">Name</th>
                                                  <th style="width:10%;" id="roleName">Application Date</th>
                                                  <th  style="width:10%;" id="Edit">Action</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                             @foreach (var item in Model)
                                        {
                                            <tr> 
                                                @*<td valign="top" class="text-left">@item.RoleID </td>*@
                                                <td valign="top" class="text-left">@item.ID </td>
                                                <td valign="top" class="text-left">@item.AppID </td>
                                                  <td valign="top" class="text-left">@item.ApplicationMode </td>
                                                <td valign="top" class="text-left">@item.Name </td> 
                                                <td valign="top" class="text-left">@item.AppDate </td>
                                                <td>
                                                    <div class="row">
                                                       @* <a id="Edit" href="/ReinstatementAppliaction/GetReport/?id=@item.ApplicationID">RDLC</a>*@
                                                      @*  <a id="Edit" href="/ReinstatementAppliaction/SendToLabourEmailPDF1/">PDF</a>*@
                                                      @*  <a id="Edit" href="/ReinstatementAppliaction/test/">View</a>*@
                                                   @*     <a id="Edit" href="/ReinstatementAppliaction/testMail/">test</a>
                                                        <a id="Edit" href="/ReinstatementAppliaction/testMail1/">test</a>*@
                                                     @if(@item.IsSubmit == true)
                                                        {
                                                           <a id="Edit" class="btn btn-outline-primary ml-3 mt-1" href="/ReinstatementAppliaction/AddReinstatementAppliaction/?id=@item.EncryptedId" ><i class="fas fa-eye"></i> View </a>
                                                        }
                                                        else
                                                        {
                                                             <a id="Edit" class="btn btn-outline-primary ml-3 mt-1" href="/ReinstatementAppliaction/AddReinstatementAppliaction/?id=@item.EncryptedId" ><i class="fas fa-pen px-0"></i> Edit </a>
                                                           @* <a id="Edit" href="/ReinstatementAppliaction/test/"><i class="fas fa-pen"></i></a>*@
                                                        }
                                                        </div>
                                                        @* <a id="Delete" onclick="return DeletePositionRecord(@item.ApplicationID);"><i class="fas fa-trash-alt"></i></a>*@
                                                </td>
                                            </tr>
                                        }
                                        </tbody>
                                    </table>
                                
                                </div>
                            </div>                            
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>


     <script>

      $( document ).ready(function() {
        $('#ReinstementList').dataTable( {} );
    });

        </script>
  
}
