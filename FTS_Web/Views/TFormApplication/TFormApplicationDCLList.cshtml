@model  IEnumerable<FTS.Model.Entities.TFormAppealApplicationModel>
@{
     ViewBag.Title = "DCL List";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken();
    <br />
    <section>
        <h3 style="font-weight:bold;"> @ViewBag.Title</h3>
    </section>       

    <div class="content-wrapper">
        <div class="row">           
            <div class="col-12 grid-margin stretch-card">
                <div class="card">
                    <div class="card-body">
                        <div class="row">
                            <div class="col-12">
                                <div class="table-responsive">
                                    <div id="Filter" class="dataTables_filter float-right mx-3">
                                        @*<a id="Add" href="/ReinstatementAppliaction/AddReinstatementAppliaction/?id=" class="btn btn-outline-primary"><i class="fas fa-plus-circle"></i>Add New</a>*@
                                              <br>
                                        <br>
                                    </div>
                                    <table id="TFormApplicationDCLList" class="display expandable-table" style="width:100%">
                                        <thead>
                                            <tr>
                                                  <th style="width:5%;" id="roleName">Sr.No.</th>
                                                 <th style="width:5%;" id="roleName">Referenece No.</th>
                                                 <th style="width:5%;" id="roleName">Appeal Id</th>
                                                  <th style="width:10%;" id="roleName">Applicant Name</th>
                                                   <th style="width:10;" id="roleName">Application Mode</th>
                                                   <th style="width:10%;" id="roleName">Application Date</th>
                                                   <th style="width:20%;" id="roleName">Status</th>
                                                   <th style="width:10%;" id="roleName">Hearing Date</th>
                                                  <th  style="width:50%;" id="Edit">Action</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                          @foreach (var item in Model)
                                          {
                                            <tr> 
                                                @*<td valign="top" class="text-left">@item.RoleID </td>*@
                                                 <td valign="top" class="text-left">@item.ID </td>
                                                    <td valign="top" class="text-left">@item.RefNApplicationID </td>
                                                        <td valign="top" class="text-left">@item.AppealID </td>
                                                <td valign="top" class="text-left">@item.ApplicantName </td>
                                                   <th style="width:20;" id="roleName">@item.ApplicationMode</th>
                                                  <td valign="top" class="text-left">@item.AppDate </td>
                                                   <th style="width:10;" id="roleName">@item.StatusName</th>
                                                   <th style="width:50;" id="roleName">@item.HearingDateString</th>jc

                                                <td>
                                                    <div class="row">
                                                     @if(@item.ActionCode != 6 && @item.ActionCode != 5 && @item.ActionCode != 4 && @item.ActionCode != 3)
                                                     {
                                                         <div class="col-auto">
                                                            <a id="Edit" class="btn btn-outline-primary ml-3 mt-1" title="Accept or Dissmiss" href="/TFormApplication/AddTFormDCLStatusUpdate/?id=@item.EncryptedId&ISNew=2" ><i class="fas fa-share"></i>Appeal Action</a>
                                                        </div>
                                                     }
                                                     @if(@item.ActionCode == 5 || @item.ActionCode == 4 || @item.ActionCode == 3)
                                                     {
                                                         <div class="col-auto">
                                                               <a id="Edit" class="btn btn-outline-primary ml-3 mt-1"  title="Hearing" href="/TFormApplication/AddTFormDCLStatusUpdate/?id=@item.EncryptedId&ISNew=0" ><i class="fas fa-calendar-alt"></i>Hearing</a>
                                                         </div>
                                                         <div class="col-auto">
                                                            <a id="Edit" class="btn btn-outline-primary ml-3 mt-1"  title="Resolution" href="/TFormApplication/AddTFormDCLStatusUpdate/?id=@item.EncryptedId&ISNew=1" ><i class="fas fa-check-circle"></i>Resolution</a>
                                                         </div>
                                                     }
                                                     </div>
                                                     @*<a id="Edit"  title="Case Resolution" href="/TFormApplication/AddTFormDCLStatusUpdate/?id=@item.EncryptedId&ISNew=1" ><i class="fas fa-share"></i></a>*@
                                                     
                                                     @*<a id="Edit"  title="Dismiss" href="/TFormApplication/AddTFormDCLStatusUpdate/?id=@item.EncryptedId&ISNew=3" ><i class="fas fa-times-circle"></i></a>*@
                                                    @* @if(@item.UserMode == 1 && @item.IsSubmit == true)
                                                        {
                                                         <a id="Edit" href="/ReinstatementAppliaction/AddReinstatementAppliaction/?id=@item.EncryptedId" ><i class="fas fa-share-alt"></i></a>
                                                        }*@
                                                        @* <a id="Delete" onclick="return DeletePositionRecord(@item.ApplicationID);"><i class="fas fa-trash-alt"></i></a>*@
                                                </td>
                                            </tr>
                                        }
                                        </tbody>
                                    </table>
                                
                                </div>
                            </div>                            
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>


     <script>

      $( document ).ready(function() {
        $('#TFormApplicationDCLList').dataTable( {} );
    });

        </script>
  
}
